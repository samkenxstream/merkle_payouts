{
  "license": "AGPL-3.0-only",
  "engines" : {
    "npm" : ">=7.24.2",
    "node" : ">=14.17.3"
  },
  "scripts": {
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "test": "hardhat compile && hardhat test",
    "coverage": "hardhat coverage",
    "skip-compile-test": "hardhat test",
    "report-gas": "REPORT_GAS=true npx hardhat test",
    "lint": "yarn run lint:sol && yarn run lint:ts",
    "lint:fix": "yarn run lint:sol-fix && yarn run lint:ts-fix",
    "lint:sol": "npx solhint 'contracts/**/*.sol'",
    "lint:sol-fix": "npx solhint 'contracts/**/*.sol' --fix",
    "lint:ts": "npx eslint '**/*.{js,ts}'",
    "lint:ts-fix": "npx eslint '**/*.{js,ts}' --fix",
    "prettier": "npx prettier '**/*.{json,sol,md}' --check",
    "prettier:fix": "npx prettier '**/*.{json,sol,md}' --write",
    "typechain": "hardhat typechain",
    "deploy:rinkeby": "yarn hardhat run scripts/deploy.ts --network rinkeby",
    "deploy:mainnet": "yarn hardhat run scripts/deploy.ts --network mainnet",
    "ingest_merkle_claims": "yarn hardhat run scripts/ingest-merkle-claims.ts"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.4.13",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "^2.7.0",
    "hardhat-gas-reporter": "^1.0.4",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.19",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3",
    "@types/ethereumjs-util": "^6.1.0",
    "axios": "^0.26.0",
    "ethereumjs-util": "^7.1.0"
  }
}
